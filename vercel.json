{
  "version": 2,
  "installCommand": "npm install && npm --prefix server install && npm --prefix server run prisma:generate && npx prisma generate --schema server/prisma/schema.prisma",
  "buildCommand": "npm --prefix src/app run build",
  "outputDirectory": "src/app/dist",
  "functions": {
    "api/**/*.js": {
      "includeFiles": "{server/src/ingest.js,server/prisma/**,node_modules/.prisma/**,node_modules/@prisma/**}"
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/[...path].js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
