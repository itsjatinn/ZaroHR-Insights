{
  "version": 2,
  "builds": [
    {
      "src": "src/app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "src/api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "functions": {
    "src/api/**/*.js": {
      "includeFiles": [
        "server/src/**",
        "server/prisma/**",
        "server/node_modules/**"
      ]
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/src/api/[...path].js" },
    { "src": "/(.*\\.(css|js|map|png|jpg|jpeg|gif|svg|webp|ico|woff2|woff|ttf))", "dest": "/src/app/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/src/app/index.html" }
  ]
}
