{
  "version": 2,
  "buildCommand": "npm --prefix src install && npm --prefix src run build",
  "outputDirectory": "src/dist",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
